    },
    "University": {
      "properties": {
        "name": {
          "type": "string"
        },
        "score": {
          "type": "number"
        },
        "logo_url": {
          "type": "string"
        }
      }
    },
    "Campus": {
      "properties": {
        "name": {
          "type": "string"
        },
        "city": {
          "type": "string"
        }
      }
    },
    "Course": {
      "properties": {
        "name": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "level": {
          "type": "string"
        },
        "shift": {
          "type": "string"
        },
        "university": {
          "type": "object",
          "$ref": "#/definitions/University"
        },
        "campus": {
          "type": "object",
          "$ref": "#/definitions/Campus"
        }
      }
    },
    "Courses": {
      "properties": {
        "total": {
          "type": "number"
        },
        "courses": {
          "type": "array",
          "$ref": "#/definitions/Course"
        }
      }
    },
    "Offer": {
      "properties": {
        "full_price": {
          "type": "number"
        },
        "price_with_discount": {
          "type": "number"
        },
        "discount_percentage": {
          "type": "number"
        },
        "start_date": {
          "type": "string"
        },
        "enrollment_semester": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "course": {
          "type": "object",
          "properties": {
            "kind": "string",
            "level": "string",
            "shift": "string",
            "name": "string"
          }
        },
        "campus": {
          "type": "object",
          "$ref": "#/definitions/Campus"
        },
        "university": {
          "type": "object",
          "$ref": "#/definitions/University"
        }
      }
    },
    "Offers": {
      "properties": {
        "total": {
          "type": "number"
        },
        "offers": {
          "type": "array",
          "$ref": "#/definitions/Offer"
        }
      }
    }
  }
