{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Quero Educação",
    "description": "Teste técnico - API de ofertas \n\n Ao adicionar o token é necessário adicionar o prefixo Bearer \n \n Vinícius Feres Belló",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "queroedu-test.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Autenticação",
      "description": "Autenticação na API"
    },
    {
      "name": "Cursos",
      "description": "Listagem de cursos"
    },
    {
      "name": "Ofertas",
      "description": "Listagem de ofertas"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "description": "Login no sistema",
        "parameters": [
          {
            "name": "auth",
            "in": "body",
            "description": "Credenciais de acesso",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login efetuado",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "description": "Criar um novo usuário",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Informações do usuário",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        }
      }
    },
    "/courses": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": [
          "Cursos"
        ],
        "parameters": [
          {
            "name": "university",
            "in": "query",
            "description": "Nome da universidade"
          },
          {
            "name": "kind",
            "in": "query",
            "description": "Tipo do curso"
          },
          {
            "name": "level",
            "in": "query",
            "description": "Grau do curso"
          },
          {
            "name": "shift",
            "in": "query",
            "description": "Turno do curso"
          }
        ],
        "description": "Listar cursos",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Lista de cursos",
            "schema": {
              "$ref": "#/definitions/Courses"
            }
          },
          "401": {
            "description": "Você não tem permissão para acessar esta rota"
          }
        }
      }
    },
    "/offers": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": [
          "Ofertas"
        ],
        "parameters": [
          {
            "name": "university",
            "in": "query",
            "description": "Nome da universidade"
          },
          {
            "name": "course",
            "in": "query",
            "description": "Nome do curso"
          },
          {
            "name": "kind",
            "in": "query",
            "description": "Tipo do curso"
          },
          {
            "name": "level",
            "in": "query",
            "description": "Grau do curso"
          },
          {
            "name": "shift",
            "in": "query",
            "description": "Turno do curso"
          },
          {
            "name": "city",
            "in": "query",
            "description": "Nome da cidade"
          },
          {
            "name": "orderBy",
            "in": "query",
            "description": "Ordenar por preço com desconto"
          }
        ],
        "description": "Listar cursos",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Lista de cursos",
            "schema": {
              "$ref": "#/definitions/Offers"
            }
          },
          "401": {
            "description": "Você não tem permissão para acessar esta rota"
          }
        }
      }
    }
  },
  "definitions": {
